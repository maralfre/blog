<% @article.comments.each do |comment| %>
    <p>
      <strong>Título:</strong>
      <%= comment.commenter %>
    </p>
   
    <p>
      <strong>Texto:</strong>
      <%= comment.body %>
    </p>

    <p>
      <%= link_to 'Borrar comentario', [comment.article, comment],
                 method: :delete,
                 data: { confirm: '¿Está ud. seguro?' } %>
    </p>
  <% end %>